
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var item = ViewBag.Information;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kütüphane Bilgileri </font></font></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li style="float:right;">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                        <div class="tile-stats bg-blue">
                            <div class="icon">
                                <i class="fa fa-book"></i>
                            </div>
                            <div class="count">@item.TotalBooks</div>
                            <h3>Tüm Kitap Sayısı</h3>
                            <p>Kütüphaneye ait tüm kitapları gösterir.</p>
                        </div>
                    </div>

                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12 ">
                        <div class="tile-stats bg-green">
                            <div class="icon">
                                <i class="fa fa-book"></i>
                            </div>
                            <div class="count">@item.LibraryBooks</div>
                            <h3>Kütüphanedeki Kitap Sayısı</h3>
                            <p>Kütüphanede kalan kitapları gösterir.</p>
                        </div>
                    </div>

                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12  ">
                        <div class="tile-stats bg-red">
                            <div class="icon">
                                <i class="fa fa-book"></i>
                            </div>
                            <div class="count">@item.BorrowBooks</div>
                            <h3>Ödünç Alınan Kitap Sayısı</h3>
                            <p>Ödünç alınan ve kütüphanede olmayan kitapları gösterir.</p>
                        </div>
                    </div>
                </div>

               
            </div>
        </div>
    </div>

</div>

<style type="text/css">
    .tile-stats h3 {
        color: white !important;
    }

    .tile-stats .icon i {
        font-size: 50px !important;
    }

    .tile-stats p {
        margin-left: 12px !important;
    }

    .tile-stats .icon i {
        color: #323232 !important;
    }
</style>