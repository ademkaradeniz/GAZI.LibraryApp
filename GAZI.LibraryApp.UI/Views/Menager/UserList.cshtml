
@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_MenagerLayout.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tüm Kullanıcı Listesi </font></font></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li style="float:right;">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-xs-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="button" class="btn-sm btn-success" id="btnsifirla" data-toggle="modal" data-target=".bs-example-modal-sm" style="width:175px; margin-bottom:10px;"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Ekle</font></font></button>
                                </div>
                            </div>
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">ID</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ad Soyad</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Adı</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">E-Mail</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Telefon</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Rolü</font></font>
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İşlem Tarihi</font></font>
                                        </th>
                                        <th class="sorting col-md-2" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="">
                                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İşlemler</font></font>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in ViewBag.Users)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="sorting_1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.ID</font></font></td>
                                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Name @item.SurName</font></font></td>
                                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.UserName</font></font></td>
                                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Email</font></font></td>
                                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.Telephone</font></font></td>
                                                <td><button type="button" disabled class="btn-xs btn-success col-md-12 col-xs-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.RoleName</font></font></button></td>
                                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.CreateOrModifyDate.ToString("dd.MM.yyyy")</font></font></td>
                                                <td style="padding-left:2.5%;">
                                                    <button type="button" data-toggle="modal" data-target=".bs-example-modal-lg-delete" data-id="@item.ID" class="btn-xs btn-danger frm-delete-user col-md-5 col-xs-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Sil</font></font></button>
                                                    <button type="button" data-toggle="modal" data-target=".bs-example-modal-sm" data-id="@item.ID" data-roleid="@item.RoleID" data-ad="@item.Name" data-soyad="@item.SurName" data-username="@item.UserName" data-email="@item.Email" data-telephone="@item.Telephone" data-password="@item.Password" class="btn-xs btn-info frm-update-user col-md-5 col-xs-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Güncelle</font></font></button>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="modal fade bs-example-modal-sm in" tabindex="-1" role="dialog" aria-hidden="true" style="padding-right: 17px;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">x</font></font></span>
                </button>
                <h4 class="modal-title" id="myModalLabel"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Kayıt Formu</font></font></h4>
            </div>
            <div class="modal-body">
                <form data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">

                    <div class="col-md-5 col-sm-5 col-xs-12">

                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Adı</font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="text" tabindex="1" id="user_name" placeholder="Kullanıcı Adı" required="required" class="form-control" value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ad</font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="text" tabindex="3" id="ad" placeholder="Ad" required="required" class="form-control" value="">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">

                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Rol</font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <select id="role_id" tabindex="2" class="form-control">
                                    <option value="">Rol Seçiniz</option>
                                    @{
                                        foreach (var role in ViewBag.Roles)
                                        {
                                            <option value="@role.ID">@role.Name</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Soyad</font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="text" tabindex="4" id="soyad" placeholder="Soyad" required="required" class="form-control" value="">
                            </div>
                        </div>

                    </div>

                    <div class="col-md-2 col-sm-2 col-xs-0">

                        <div class="form-group row">
                            <br />
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="profile_img">
                                    <div id="crop-avatar">
                                        <!-- Current avatar -->
                                        <img class="img-responsive avatar-view" src="~/Content/Gentelella/production/images/user.png" alt="Avatar" title="">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">E-Mail </font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="email" tabindex="5" id="user_email" placeholder="E-Mail" required="required" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Şifre </font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="password" tabindex="7" id="user_password" placeholder="Şifre" required="required" class="form-control" value="">
                            </div>
                        </div>
                        
                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Telefon </font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="tel" maxlength="11" tabindex="6" onkeypress="return isNumberKey(event)" id="user_telephone" placeholder="Telefon" required="required" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Şifre Onay </font></font>
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="password" tabindex="8" id="user_password_2" placeholder="Şifre Onay" required="required" class="form-control" value="">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="form-group row">
                            <label class="col-form-label col-md-12 col-sm-12 col-xs-12 label-align" for="first-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kayıt Tarihi </font></font>
                            </label>
                            <div class="col-md-10 col-sm-10 col-xs-12">
                                <input type="text" placeholder="Kayıt Tarihi" disabled required="required" class="form-control" value="@DateTime.Now.ToString("dd.MM.yyyy")">
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-sm btn-danger" data-dismiss="modal"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kapat</font></font></button>
                <button type="button" class="btn-sm btn-success" id="btn-add-user"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Kaydet</font></font></button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg-delete in" tabindex="-1" role="dialog" aria-hidden="true" style="padding-right: 17px;">
    <div class="modal-dialog modal-lg modal-danger">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">x</font></font></span>
                </button>
                <h4 class="modal-title" id="myModalLabel"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Silme Formu</font></font></h4>
            </div>
            <div class="modal-body">
                <h4>Kullanıcıyı gerçekten silmek istiyor musunuz?</h4>
                <p>Kullanıcı bir kitap aldıysa bu bilgilerde silinecektir!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-sm btn-info" data-dismiss="modal"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kapat</font></font></button>
                <button type="button" class="btn-sm btn-danger" id="btn-delete-user"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kullanıcı Sil</font></font></button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/PageScripts/AddUser.js"></script>
<script type="text/javascript">
    var submitUrl = "@Url.Action("CreateOrUpdateUser", "Menager")";
    var deleteUrl = "@Url.Action("DeleteUser", "Menager")";
</script>


